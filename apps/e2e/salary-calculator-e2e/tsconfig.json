{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "outDir": "../../../dist/out-tsc",
    "module": "commonjs",
    "types": ["playwright", "node"],
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "src"
  },
  "include": ["**/*.ts", "**/*.js", "playwright.config.ts", "**/*.d.ts"],
  "exclude": [
    "cypress",
    "**/*.cy.ts",
    "**/*.cy.tsx",
    "**/*.cy.js",
    "**/*.cy.jsx"
  ]
}
